<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="tab_IndicatorColor" format="color" />
        <attr name="tab_UnderlineColor" format="color" />
        <attr name="tab_DividerColor" format="color" />
        <attr name="tab_IndicatorHeight" format="dimension" />
        <attr name="tab_UnderlineHeight" format="dimension" />
        <attr name="tab_DividerPadding" format="dimension" />
        <attr name="tab_TabPaddingLeftRight" format="dimension" />
        <attr name="tab_ScrollOffset" format="dimension" />
        <attr name="tab_TabBackground" format="reference" />
        <attr name="tab_ShouldExpand" format="boolean" />
        <attr name="tab_TextAllCaps" format="boolean" />
    </declare-styleable>

    <declare-styleable name="WrapRecyclerView">
        <attr name="frv_divider" format="reference|color" />
        <attr name="frv_dividerVertical" format="reference|color" />
        <attr name="frv_dividerHorizontal" format="reference|color" />
        <attr name="frv_dividerHeight" format="dimension" />
        <attr name="frv_dividerVerticalHeight" format="dimension" />
        <attr name="frv_dividerHorizontalHeight" format="dimension" />
        <attr name="frv_itemViewBothSidesMargin" format="dimension" />
        <attr name="frv_emptyView" format="reference" />
        <attr name="frv_isEmptyViewKeepShowHeadOrFooter" format="boolean" />
        <attr name="frv_layoutManager" format="enum">
            <enum name="linear" value="0" />
            <enum name="grid" value="1" />
            <enum name="staggeredGrid" value="2" />
        </attr>
        <attr name="frv_layoutManagerOrientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="frv_spanCount" format="integer" />
        <attr name="frv_isReverseLayout" format="boolean" />
        <attr name="frv_headerDividersEnabled" format="boolean" />
        <attr name="frv_footerDividersEnabled" format="boolean" />
    </declare-styleable>

</resources>