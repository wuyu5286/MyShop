<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <ImageView
        android:id="@+id/item_view_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/item_view_left_text"
        style="@style/TextView"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/item_view_icon"
        android:layout_toRightOf="@+id/item_view_icon"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/text_14sp"/>

    <TextView
        android:id="@+id/item_view_right_text"
        style="@style/TextView"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/item_view_arrow"
        android:layout_toStartOf="@+id/item_view_arrow"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/text_14sp"/>

    <ImageView
        android:id="@+id/item_view_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:contentDescription="@null"
        android:visibility="visible"
        android:background="@mipmap/arrow_right_black"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/item_view_icon"
        android:contentDescription="@null"
        android:src="@color/gray_light"/>

</RelativeLayout>